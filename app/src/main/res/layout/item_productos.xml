<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" >


        <ImageView
            android:id="@+id/img_Producto"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_NombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorSecondaryText"
                android:textSize="20dp"
                android:text="nombre"
                android:layout_marginHorizontal="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/item_Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_NombreProducto"
                android:textColor="@color/colorSecondaryText"
                android:textSize="17dp"
                android:text="@string/GP_Consultaprecio"
                android:layout_marginHorizontal="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/item_SoloMayoreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_Precio"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12dp"
                android:text="@string/GP_SoloMayoreo"
                android:layout_marginHorizontal="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>

</LinearLayout>